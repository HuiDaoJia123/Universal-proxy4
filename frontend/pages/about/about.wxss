/* pages/about/about.wxss */

/* 页面整体样式 */
.about-container {
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.about-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.nav-placeholder {
  width: 48rpx;
  height: 48rpx;
}

/* 主要内容 */
.about-content {
  flex: 1;
}

/* 头部横幅 */
.hero-section {
  position: relative;
  height: 400rpx;
}

.hero-image {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.company-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}

.company-slogan {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.version-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

/* 开发者信息 */
.developer-section {
  background: white;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.developer-card {
  display: flex;
  align-items: center;
}

.developer-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  border: 2rpx solid #f0f0f0;
}

.developer-info {
  flex: 1;
}

.developer-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.developer-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 通用区块样式 */
.intro-section,
.advantages-section,
.version-section,
.contact-section {
  background: white;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #1890ff;
  padding-left: 20rpx;
}

/* 公司简介 */
.intro-content {
  margin-bottom: 32rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 优势展示 */
.advantages-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.advantage-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.advantage-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f8ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.advantage-img {
  width: 40rpx;
  height: 40rpx;
}

.advantage-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.advantage-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 版本信息 */
.version-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 32rpx;
}

.version-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.version-badge-large {
  background: #1890ff;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.version-text {
  flex: 1;
}

.app-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.version-stable {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: 500;
}

.version-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.update-time,
.app-size {
  font-size: 24rpx;
  color: #666;
}

.version-features {
  margin-bottom: 32rpx;
}

.features-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.check-update-btn {
  width: 100%;
  height: 80rpx;
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 联系我们 */
.contact-methods {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
}

.contact-icon {
  width: 60rpx;
  height: 60rpx;
  background: #f0f8ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.contact-img {
  width: 32rpx;
  height: 32rpx;
}

.contact-info {
  flex: 1;
}

.contact-type {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.contact-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 法律信息 */
.legal-section {
  background: white;
  margin: 24rpx 32rpx 40rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.legal-links {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 24rpx;
}

.legal-link {
  font-size: 26rpx;
  color: #1890ff;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}

/* 更新弹窗 */
.update-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.update-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  background: white;
  border-radius: 20rpx;
  width: 85%;
  max-width: 600rpx;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.update-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.modal-body {
  padding: 32rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.current-version {
  display: block;
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.update-version {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.update-size {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.update-features-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.update-features-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.update-feature-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.no-update {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.no-update-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.no-update-text {
  font-size: 28rpx;
  color: #666;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 32rpx 32rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.modal-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.primary {
  background: #1890ff;
  color: white;
}