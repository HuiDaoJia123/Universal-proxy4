/* 页面整体样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.container {
  padding: 30rpx;
  padding-bottom: 140rpx; /* 为底部按钮留出空间 */
  box-sizing: border-box;
}

/* 申请成为刷客入口 */
.apply-brusher-entry {
  background: linear-gradient(135deg, #e8f4f8 0%, #f0f8fb 100%);
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.apply-brusher-entry text {
  font-size: 26rpx;
  color: #4299e1;
}

.apply-brusher-entry .apply-btn {
  background-color: #4299e1;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

/* 页面头部 */
.header-section {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 通用区域样式 */
.form-section, .additional-section, .price-boost-section, .remark-section, .price-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

/* 表单项目 */
.form-item {
  margin-bottom: 35rpx;
  padding-bottom: 35rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.label.required::before {
  content: "*";
  color: #ff4d4f;
  margin-right: 8rpx;
}

/* 输入框样式（已扩大） */
.input, .textarea {
  width: 100%;
  padding: 28rpx 24rpx; /* 增加内边距 */
  border: 1rpx solid #ddd;
  border-radius: 12rpx; /* 加大圆角 */
  font-size: 30rpx; /* 增大字体 */
  background-color: #f9f9f9;
  box-sizing: border-box;
  min-height: 100rpx; /* 最小高度 */
  line-height: 44rpx; /* 行高适配 */
  word-break: break-all; /* 长文本自动换行 */
}

.textarea {
  min-height: 180rpx; /* 文本域更高 */
  resize: none;
}

/* 附加服务选项 */
.additional-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.additional-item {
  flex: 1;
  min-width: 45%;
  padding: 25rpx 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.additional-item.active {
  background-color: #98D8C8;
  border-color: #98D8C8;
  color: white;
}

.service-name {
  display: block;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.service-price {
  font-size: 22rpx;
}

/* 加价选项 */
.boost-options {
  display: flex;
  justify-content: space-between;
  gap: 15rpx;
}

.boost-option {
  flex: 1;
  padding: 20rpx 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.boost-option.active {
  background-color: #F7DC6F;
  border-color: #F7DC6F;
  color: #333;
  font-weight: bold;
}

.boost-text {
  font-size: 26rpx;
}

/* 备注信息 */
.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 价格总计 */
.price-detail {
  background-color: #f9f9f9;
  padding: 25rpx;
  border-radius: 8rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.price-label, .total-label {
  font-size: 28rpx;
  color: #666;
}

.price-value, .total-value {
  font-size: 28rpx;
  color: #333;
}

.price-total {
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
  border-top: 1rpx solid #e0e0e0;
  margin-top: 15rpx;
}

.total-label {
  font-weight: bold;
}

.total-value {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
  box-sizing: border-box;
}

.btn-contact, .btn-submit {
  flex: 1;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-contact {
  background: white;
  color: #4299e1;
  border: 1rpx solid #4299e1;
}

.btn-submit {
  background: #4299e1;
  color: white;
  border: none;
}

.btn-submit[disabled] {
  background: #ccc;
  color: white;
}