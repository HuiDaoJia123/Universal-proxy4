/* pages/order-chat/order-chat.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 聊天头部 */
.chat-header {
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.user-status {
  font-size: 24rpx;
  color: #666;
}

.btn-customer-service {
  background-color: #FFA07A;
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 聊天内容 */
.chat-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
}

.user-message {
  flex-direction: row-reverse;
}

.provider-message {
  flex-direction: row;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.user-message .avatar {
  margin-left: 20rpx;
}

.provider-message .avatar {
  margin-right: 20rpx;
}

.message-content {
  max-width: 70%;
  display: flex;
  flex-direction: column;
}

.user-message .message-content {
  align-items: flex-end;
}

.provider-message .message-content {
  align-items: flex-start;
}

.message-text {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.4;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-message .message-text {
  background-color: #1E90FF;
  color: white;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 输入区域 */
.input-section {
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.message-input {
  flex: 1;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  background-color: #1E90FF;
  color: white;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}