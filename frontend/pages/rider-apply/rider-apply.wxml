<!--pages/rider-apply/rider-apply.wxml-->
<view class="container">
  <view class="header-section">
    <text class="title">骑手申请</text>
    <text class="subtitle">填写基本信息，快速成为我们的骑手</text>
  </view>

  <view class="form-section">
    <view class="form-item">
      <text class="label">姓名</text>
      <input class="input" placeholder="请输入您的真实姓名" value="{{form.name}}" bindinput="onNameInput" />
    </view>

    <view class="form-item">
      <text class="label">手机号</text>
      <input class="input" type="number" placeholder="请输入您的手机号" value="{{form.phone}}" bindinput="onPhoneInput" />
    </view>

    <view class="form-item">
      <text class="label">学号</text>
      <input class="input" placeholder="请输入您的学号" value="{{form.studentId}}" bindinput="onStudentIdInput" />
    </view>

    <view class="form-item">
      <text class="label">学院专业</text>
      <input class="input" placeholder="请输入您的学院和专业" value="{{form.major}}" bindinput="onMajorInput" />
    </view>

    <view class="form-item">
      <text class="label">可工作时间</text>
      <picker class="picker" mode="selector" range="{{workTimes}}" value="{{workTimeIndex}}" bindchange="onWorkTimeChange">
        <view class="picker-view">{{form.workTime || '请选择可工作时间'}}</view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">是否有电动车</text>
      <view class="radio-group">
        <view class="radio-item {{form.hasBike ? 'active' : ''}}" bindtap="setHasBike" data-value="true">
          <text>是</text>
        </view>
        <view class="radio-item {{!form.hasBike ? 'active' : ''}}" bindtap="setHasBike" data-value="false">
          <text>否</text>
        </view>
      </view>
    </view>

    <view class="form-item">
      <text class="label">申请备注</text>
      <textarea class="textarea" placeholder="请简单说明您申请骑手的原因和优势" value="{{form.remark}}" bindinput="onRemarkInput" maxlength="200" />
      <text class="word-count">{{form.remark.length}}/200</text>
    </view>

    <view class="agreement">
      <checkbox class="checkbox" checked="{{form.agreed}}" bindtap="toggleAgreement" />
      <text class="agreement-text">我已阅读并同意</text>
      <text class="agreement-link" bindtap="viewAgreement">《骑手服务协议》</text>
    </view>

    <button class="submit-btn" disabled="{{!canSubmit}}" bindtap="submitApplication">提交申请</button>
  </view>
</view>