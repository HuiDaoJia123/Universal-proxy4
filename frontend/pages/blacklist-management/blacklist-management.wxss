/* pages/blacklist-management/blacklist-management.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 30rpx;
}
 
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
}
 
.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}
 
.subtitle {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
}
 
.search-section {
  padding: 20rpx 30rpx;
  background: white;
  margin-bottom: 20rpx;
}
 
.search-bar {
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}
 
.search-icon {
  margin-right: 20rpx;
  color: #999;
}
 
.search-input {
  flex: 1;
  font-size: 28rpx;
}
 
.clear-search {
  color: #667eea;
  font-size: 24rpx;
  margin-left: 20rpx;
}
 
.blacklist-section {
  background: white;
  margin: 0 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
 
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
 
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
 
.add-btn {
  color: #667eea;
  font-size: 28rpx;
  font-weight: bold;
}
 
.blacklist-list {
  background: white;
}
 
.blacklist-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
 
.blacklist-item:last-child {
  border-bottom: none;
}
 
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}
 
.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}
 
.user-avatar image {
  width: 100%;
  height: 100%;
}
 
.default-avatar {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}
 
.user-details {
  flex: 1;
}
 
.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
 
.user-phone {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
 
.block-reason {
  font-size: 24rpx;
  color: #ff6b6b;
  display: block;
  margin-bottom: 5rpx;
}
 
.block-time {
  font-size: 22rpx;
  color: #999;
  display: block;
}
 
.action-btns {
  display: flex;
  gap: 20rpx;
}
 
.remove-btn {
  background: #ff6b6b;
  color: white;
  border: none;
  font-size: 24rpx;
}
 
.empty-state {
  padding: 100rpx 30rpx;
  text-align: center;
}
 
.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}
 
.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}
 
.empty-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  line-height: 1.5;
}
 
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
 
.modal-content {
  background: white;
  margin: 0 60rpx;
  border-radius: 20rpx;
  overflow: hidden;
  max-height: 80vh;
}
 
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
 
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
 
.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}
 
.modal-body {
  padding: 30rpx;
}
 
.form-item {
  margin-bottom: 30rpx;
}
 
.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}
 
.form-input {
  width: 100%;
  padding: 25rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}
 
.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 25rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}
 
.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}
 
.cancel-btn, .confirm-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}
 
.cancel-btn {
  background: #f8f9fa;
  color: #666;
}
 
.confirm-btn {
  background: #667eea;
  color: white;
}
 
.confirm-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  text-align: center;
}
 
.confirm-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  text-align: center;
  line-height: 1.5;
}