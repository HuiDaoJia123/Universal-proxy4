/* pages/welcome/welcome.wxss */
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.ad-image {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.skip-btn {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  padding: 12rpx 30rpx;
  z-index: 100;
}

.skip-text {
  color: white;
  font-size: 28rpx;
  font-weight: 400;
}