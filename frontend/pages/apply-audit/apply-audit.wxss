/* pages/apply-audit/apply-audit.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
 
/* 认证状态样式 */
.auth-status-section {
  margin-bottom: 20rpx;
}
 
.auth-tip {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff3cd;
  border-radius: 12rpx;
  border-left: 6rpx solid #ffc107;
}
 
.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}
 
.tip-text {
  flex: 1;
  color: #856404;
  font-size: 28rpx;
}
 
.auth-btn {
  background: #007bff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  margin: 0;
  line-height: 1.5;
}
 
/* 服务介绍 */
.service-intro {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  color: white;
  margin-bottom: 30rpx;
}
 
.service-icon {
  margin-bottom: 20rpx;
}
 
.service-img {
  width: 120rpx;
  height: 120rpx;
}
 
.service-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
 
.service-desc {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}
 
/* 表单样式 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}
 
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
 
.form-group {
  margin-bottom: 40rpx;
}
 
.group-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #007bff;
}
 
.form-item {
  margin-bottom: 30rpx;
}
 
.form-item:last-child {
  margin-bottom: 0;
}
 
.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}
 
.input, .textarea {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: white;
}
 
.input {
  height: 80rpx;
}
 
.textarea {
  min-height: 120rpx;
}
 
.input:focus, .textarea:focus {
  border-color: #007bff;
}
 
input[disabled] {
  background-color: #f8f9fa !important;
  color: #6c757d !important;
}
 
.auth-hint {
  color: #999;
  font-size: 22rpx;
  margin-top: 8rpx;
  display: block;
}
 
/* 要求和权益样式 */
.requirements-section,
.benefits-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
 
.requirement-list,
.benefit-list {
  margin-top: 20rpx;
}
 
.requirement-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}
 
.requirement-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  background: #007bff;
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}
 
.requirement-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  flex: 1;
  padding-top: 8rpx;
}
 
.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
 
.benefit-icon {
  color: #28a745;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
 
.benefit-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  flex: 1;
}
 
/* 提交区域 */
.submit-section {
  margin-top: 40rpx;
}
 
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border: none;
}
 
.submit-btn.disabled {
  background: #ccc;
  color: #999;
}
 
.submit-btn.enabled {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
}
 
.submit-btn.enabled:active {
  transform: scale(0.98);
}
 
.rule-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 44rpx;
  background: white;
  color: #666;
  font-size: 28rpx;
}
 
/* 状态展示样式 */
.status-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
 
.illustration {
  text-align: center;
  margin-bottom: 40rpx;
}
 
.illustration-img {
  width: 200rpx;
  height: 200rpx;
}
 
.content {
  text-align: center;
}
 
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
 
.status-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
 
.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}
 
.status-item:last-child {
  border-bottom: none;
}
 
.status-label {
  font-size: 28rpx;
  color: #666;
}
 
.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
 
.status-pending {
  color: #ffc107;
}
 
.status-reviewing {
  color: #17a2b8;
}
 
.status-approved {
  color: #28a745;
}
 
.status-rejected {
  color: #dc3545;
}
 
.status-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
  text-align: left;
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 12rpx;
}
 
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
 
.btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
}
 
.btn-primary {
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: white;
}
 
.btn-rule {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}
 
.btn-withdraw {
  background: #dc3545;
  color: white;
}
 
.btn:active {
  transform: scale(0.98);
}