/* pages/notification-center/notification-center.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
 
/* 标签栏样式 */
.tab-bar {
  display: flex;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  border-bottom: 1px solid #e8e8e8;
}
 
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  font-size: 32rpx;
  color: #666;
}
 
.tab-item.active {
  color: #00a1d6;
  font-weight: 500;
}
 
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #00a1d6;
  border-radius: 2rpx;
}
 
.tab-badge {
  position: absolute;
  top: 12rpx;
  right: 30%;
  background: #ff6699;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  transform: scale(0.8);
}
 
/* 内容区域 */
.content-area {
  margin-top: 88rpx;
}
 
/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}
 
.unread-info {
  flex: 1;
}
 
.unread-text {
  font-size: 28rpx;
  color: #ff6699;
}
 
.action-buttons {
  display: flex;
  gap: 20rpx;
}
 
.mark-read-btn, .clear-btn {
  background: none;
  border: 1px solid #ddd;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  line-height: 1;
}
 
.mark-read-btn:active, .clear-btn:active {
  background: #f5f5f5;
}
 
/* 通知项样式 */
.notification-item {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: #fff;
  margin-bottom: 2rpx;
  position: relative;
  transition: background 0.2s;
}
 
.notification-item:active {
  background: #f8f8f8;
}
 
.notification-item.unread {
  background: #f8fcff;
}
 
.notify-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}
 
.icon-audit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
 
.icon-order {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
}
 
.icon-payment {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}
 
.icon-chat {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: #fff;
}
 
.icon-system {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #fff;
}
 
.notify-content {
  flex: 1;
  min-width: 0;
}
 
.notify-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}
 
.notify-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
}
 
.notify-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}
 
.notify-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
 
.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff6699;
  border-radius: 50%;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}
 
/* 对话项样式 */
.conversation-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  margin-bottom: 2rpx;
  position: relative;
}
 
.avatar {
  margin-right: 24rpx;
  flex-shrink: 0;
}
 
.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
 
.conversation-content {
  flex: 1;
  min-width: 0;
}
 
.conversation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
 
.conversation-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
 
.conversation-time {
  font-size: 24rpx;
  color: #999;
}
 
.conversation-desc {
  font-size: 28rpx;
  color: #666;
}
 
.last-message {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
 
.no-message {
  color: #999;
}
 
.conversation-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 16rpx;
}
 
.unread-count {
  background: #ff6699;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}
 
/* 空状态 */
.empty-notify, .empty-conversation {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: #fff;
}
 
.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}
 
.empty-text {
  font-size: 28rpx;
  color: #999;
}
 
/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  background: #fff;
  color: #999;
  font-size: 28rpx;
}
 
/* 图标字体 */
.iconfont {
  font-size: 36rpx;
}