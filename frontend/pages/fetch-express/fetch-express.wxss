/* pages/fetch-express/fetch-express.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 50rpx;
}

/* 页面头部 */
.header-section {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #FF6B6B;
}

/* 表单区域 */
.form-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.input, .picker-view, .textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.textarea {
  height: 150rpx;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 快递重量选择 */
.weight-section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.weight-options {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.weight-option {
  width: 48%;
  padding: 25rpx 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 15rpx;
  background-color: #f9f9f9;
}

.weight-option.active {
  background-color: #1E90FF;
  border-color: #1E90FF;
  color: white;
}

.weight-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.weight-price {
  display: block;
  font-size: 24rpx;
}

.weight-option.active .weight-price {
  color: rgba(255, 255, 255, 0.9);
}

/* 价格显示 */
.price-section {
  background-color: #f9f9f9;
  padding: 25rpx;
  border-radius: 8rpx;
  margin: 30rpx 0;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.price-label, .total-label {
  font-size: 28rpx;
  color: #666;
}

.price-value, .total-value {
  font-size: 28rpx;
  color: #333;
}

.price-total {
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
  border-top: 1rpx solid #e0e0e0;
}

.total-label {
  font-weight: bold;
}

.total-value {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 提交按钮 */
.submit-btn {
  background-color: #1E90FF;
  color: white;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.submit-btn:disabled {
  background-color: #ccc;
}
