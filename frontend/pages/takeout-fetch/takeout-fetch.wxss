/* pages/takeout-fetch/takeout-fetch.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 50rpx;
}

/* 页面头部 */
.header-section {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #FF6B6B;
}

/* 表单区域 */
.form-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.input, .picker-view, .textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.textarea {
  height: 150rpx;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 外卖类型选择 */
.type-section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.type-options {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.type-option {
  width: 32%;
  padding: 25rpx 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  margin-bottom: 15rpx;
  background-color: #f9f9f9;
}

.type-option.active {
  background-color: #4ECDC4;
  border-color: #4ECDC4;
  color: white;
}

.type-text {
  display: block;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.type-price {
  display: block;
  font-size: 22rpx;
}

.type-option.active .type-price {
  color: rgba(255, 255, 255, 0.9);
}

/* 数量控制 */
.quantity-section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.quantity-control {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-quantity {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  background-color: #f9f9f9;
  border-radius: 50%;
  font-size: 30rpx;
}

.quantity {
  margin: 0 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  min-width: 60rpx;
  text-align: center;
}

/* 价格显示 */
.price-section {
  background-color: #f9f9f9;
  padding: 25rpx;
  border-radius: 8rpx;
  margin: 30rpx 0;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.price-label, .total-label {
  font-size: 28rpx;
  color: #666;
}

.price-value, .total-value {
  font-size: 28rpx;
  color: #333;
}

.price-total {
  display: flex;
  justify-content: space-between;
  padding-top: 15rpx;
  border-top: 1rpx solid #e0e0e0;
}

.total-label {
  font-weight: bold;
}

.total-value {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 温馨提示 */
.tips-section {
  background-color: #FFF9E6;
  padding: 25rpx;
  border-radius: 8rpx;
  margin: 30rpx 0;
  border-left: 4rpx solid #FFD700;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  color: #E6A23C;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #E6A23C;
  line-height: 1.6;
}

/* 提交按钮 */
.submit-btn {
  background-color: #4ECDC4;
  color: white;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.submit-btn:disabled {
  background-color: #ccc;
}
