/* pages/feedback/feedback.wxss */

/* 页面整体样式 */
.feedback-container {
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.nav-placeholder {
  width: 48rpx;
  height: 48rpx;
}

/* 反馈表单 */
.feedback-form {
  flex: 1;
  padding-bottom: 120rpx;
}

.form-section {
  background: white;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.word-count {
  font-size: 26rpx;
  color: #999;
}

.section-desc {
  font-size: 26rpx;
  color: #999;
}

/* 问题类型选择 */
.type-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #1890ff;
  background: #f0f8ff;
}

.type-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

.type-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.type-item.selected .type-text {
  color: #1890ff;
}

/* 内容输入 */
.content-input {
  width: 100%;
  height: 240rpx;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #e8e8e8;
  line-height: 1.5;
}

.content-input::placeholder {
  color: #ccc;
}

/* 图片上传 */
.upload-container {
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon {
  width: 20rpx;
  height: 20rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.upload-btn:not(.disabled):active {
  background: #f5f5f5;
  border-color: #1890ff;
}

.upload-btn.disabled {
  opacity: 0.5;
}

.upload-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 联系方式 */
.contact-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.contact-inputs {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.contact-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.contact-input::placeholder {
  color: #ccc;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  border: none;
  transition: all 0.3s;
}

.submit-btn.active {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

/* 成功弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.success-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx 40rpx;
  width: 80%;
  max-width: 560rpx;
  text-align: center;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.success-modal.show .modal-content {
  transform: scale(1);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.modal-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.modal-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.primary {
  background: #1890ff;
  color: white;
}

/* 历史记录入口 */
.history-entry {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  background: white;
  padding: 20rpx 24rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.history-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.history-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}