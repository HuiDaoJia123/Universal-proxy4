.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部说明 */
.header-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 商品列表 */
.goods-list {
  background-color: white;
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.goods-info {
  flex: 1;
}

.goods-name {
  display: block;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.goods-price {
  color: #ff6b6b;
  font-size: 28rpx;
}

.goods-operations {
  display: flex;
  align-items: center;
}

.btn-minus, .btn-plus {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  background-color: #f9f9f9;
  border-radius: 50%;
}

.goods-count {
  margin: 0 20rpx;
  font-size: 30rpx;
  min-width: 40rpx;
  text-align: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 添加商品 */
.add-goods {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
}

.input-goods-name, .input-goods-price {
  flex: 1;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.input-goods-price {
  flex: 0.7;
}

.btn-add-goods {
  background-color: #1E90FF;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
}

/* 备注信息 */
.remark-section {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.remark-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.remark-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 骑手备注 */
.rider-remark {
  background-color: #FFF9E6;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  border-left: 4rpx solid #FFD700;
}

.rider-text {
  display: block;
  font-size: 26rpx;
  color: #E6A23C;
  margin-bottom: 20rpx;
}

.btn-rider {
  background-color: #FFD700;
  color: #333;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

/* 底部结算 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.total-section {
  flex: 1;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.btn-submit {
  background-color: #1E90FF;
  color: white;
  border-radius: 8rpx;
  padding: 25rpx 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}
